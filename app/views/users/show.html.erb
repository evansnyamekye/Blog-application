<div class="container">
  <div class="user_info">
    <div class="img">
      <%= image_tag @user.photo, alt: "User Photo", class: "user-photo" if @user.photo%>
    </div>
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><strong>Number of Posts::memo:</strong> <%= @user.posts.count %></p>
    </div>
  </div>
  <div class="user_bio">
    <p>Bio</p>
  <p><%= @user.bio %></p>
  </div>
  <% @user.three_recent_posts.each_with_index do |post, index| %>
  <div class="post">
    <h4>:memo:Post<%= index+1  %>: <%= link_to post.title, user_post_path(@user, post) %></h4>
    <p><%= post.text %></p>
    <p class="count">Comments::speech_balloon:<%= post.comments.count %> | Likes::memo:<%= post.likes.count %></p>
  </div>
<% end %>
  <%= link_to "See all posts :memo:", user_posts_path(@user), class: 'button' %>
</div>
